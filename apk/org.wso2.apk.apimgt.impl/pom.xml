            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Private-Package>
                            org.wso2.apk.apimgt.impl.internal.*
                        </Private-Package>
                        <Export-Package>
                            !org.apache.commons.codec.*,
                            org.wso2.apk.apimgt.impl.*;version="${apk.apimgt.version}",
                            !org.apache.commons.collections4.*,
                        </Export-Package>
                        <Import-Package>
                            org.wso2.apk.apimgt.api.*;version="${apk.apimgt.imp.pkg.version}",
                            !org.wso2.apk.apimgt.api.model.xsd.*,
                            javax.servlet;version="${javax.servlet.imp.pkg.version}",
                            javax.servlet.http;version="${javax.servlet.imp.pkg.version}",
                            javax.servlet.resources;version="${javax.servlet.imp.pkg.version}",
