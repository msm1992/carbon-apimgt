                            org.apache.pdfbox.*; version="${pdfbox.version}",
                            javax.cache,
                            javax.naming,
                            javax.sql,
                            javax.wsdl.*,
                            javax.xml.*;version="0.0.0",
                            org.json.simple.*,
                            org.json.*;version="${org.json.version.range}",
                            org.slf4j,
